
alias ls='lsd -lh --group-directories-first'
alias la='lsd -lAh --group-directories-first'
alias tree='lsd --tree --depth 3 --group-directories-first'
alias tral='lsd --tree -lA --group-directories-first'
alias trdev='tral -I .git'
alias mv='mv -v'
alias cp='cp -vp'
alias diff='diff --color=auto'
alias grep='grep --color=auto'
alias ip='ip -color=auto'
alias cat='bat'
alias dmesg='dmesg --color=always | less'
if [[ -o login ]]; then
    alias logout='hyprctl dispatch exit'
fi
alias dotfiles='git --git-dir="$HOME/.dotfiles/" --work-tree="$HOME"'

